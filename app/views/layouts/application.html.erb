<!DOCTYPE html>
<html class="h-full bg-white">
  <head>
    <title>Cheerz</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>
  <body class="h-full">
    <!-- Bloc d'alerte, s'affiche si la variable `alert` est présente -->
    <% if alert %>
      <%= render partial: 'shared/notification', locals: { 
message: alert, 
  bg_color: 'bg-red-50', 
  svg_color: 'text-red-400',
  text_color: 'text-red-800',
  button_color: 'bg-red-50 p-1.5 text-red-500',
  hover_color: 'bg-red-100',
  focus_ring_color: 'focus:ring-red-600',
  focus_offset_color: 'focus:ring-offset-red-50',
  svg_path: '<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd"></path>',
  close_svg_path: '<path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"></path>'
  } %>
    <% end %>
    <!-- Bloc de notification, s'affiche si la variable `notice` est présente -->
    <% if notice %>
      <%= render partial: 'shared/notification', locals: { 
  message: notice, 
  bg_color: 'bg-green-50', 
  svg_color: 'text-green-400',
  text_color: 'text-green-800',
  button_color: 'bg-green-50 p-1.5 text-green-500',
  hover_color: 'bg-green-100',
  focus_ring_color: 'focus:ring-green-600',
  focus_offset_color: 'focus:ring-offset-green-50',
  svg_path: '<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"></path>',
  close_svg_path: '<path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"></path>'
  } %>
    <% end %>
    <!-- Contenu principal de la page -->
    <%= yield %>
  </body>
</html>
